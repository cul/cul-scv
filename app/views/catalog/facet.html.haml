%div.facet_extended_list
  
  - sidebar_items << capture do
    %p= link_back_to_catalog 

  %div.facet_pagination.top
    = render :partial=>'facet_pagination'
  %div.modal-header
    %button{:type=>'button', :class=>'close', :"data-dismiss"=>'modal', :"aria-hidden"=>'true'}
    %h3=facet_field_labels[params[:id]]
  %div.modal-body
    %div.facet_extended_list
      %ul.facet_extended_list
        - @pagination.items.each do |item|
          %li
            - if facet_in_params?( params[:id], item.value)
              != render_selected_facet_value(params[:id], item)
            - else
              != render_facet_value(params[:id], item)
  %div.modal-footer    
    %div.facet_pagination.bottom
      = render :partial=>'facet_pagination'
