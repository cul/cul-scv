- link ||= false
%div.md-items
  .yui-gf
    .label.yui-u.first="Title:"
    .value.yui-u= (link)? (link_to_mash document) : document["title_display"]
  .yui-gf
    - if document[:identifier_s]
      - if document[:identifier_s].is_a? Array
        - document[:identifier_s].each do |value|
          .label.yui-u.first= "ID:"
          .value.yui-u= value
      - else
        .label.yui-u.first= "ID:"
        .value.yui-u= document[:identifier_s]
    - else
      .label.yui-u.first= "ID:"
      .value.yui-u= document["id"]
  - if document[:access_condition_s]
    .yui-gf
      - if document[:access_condition_s].is_a? Array
        - document[:access_condition_s].each do |value|
          .label.yui-u.first= "Access:"
          .value.yui-u= value
      - else
        .label.yui-u.first= "Access:"
        .value.yui-u= document[:access_condition_s]
