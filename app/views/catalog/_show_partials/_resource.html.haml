// default partial to display solr document fields in catalog show view
- #metadata_list = get_metadata_list(document)
.container-fluid
  .col-md-12
    = render :partial => "catalog/_show_partials/metadata_brief", :locals => {:document => document, groups: true}
  .col-md-12
    = render :partial => "catalog/_show_partials/#{document[:dc_type_ssm].first.underscore}/display_derivatives", :locals => {:document => document}
- if zoomable?(document)
  = render :partial => "catalog/_screen_partials/zooming", :locals => {:document => document}
- else
  = render :partial => "catalog/_screen_partials/#{document[:dc_type_ssm].first.underscore}", :locals => {:document => document}
