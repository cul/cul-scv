-# coding: utf-8
- label ||= document[:index_type_label_ssi]
- document_counter ||= -1
- data_counter = (document_counter + 1 + @response.params[:start].to_i)
- href ||= url_to_document(document)
- multi = (label and (label =~ /MULTI/)) ? "-multipart" : "-single"
%a{:href=>href, :'data-counter'=>data_counter, :class=>"thumbnail thumbnail#{multi} pull-left thumbnail-link"}
  - unless multi == '-single'
    .thumb-overlay
      %img{:src=>thumbnail_path(document[:id]), :alt=>"", :class=>"media-object"}
  - else
    %img{:src=>thumbnail_path(document[:id]), :alt=>"", :class=>"media-object"}