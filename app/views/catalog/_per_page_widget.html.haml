- if show_sort_and_per_page? and !blacklight_config.per_page.blank?
  %span.sr-only= t('blacklight.search.per_page.title')
  %div#per_page-dropdown.btn-group.dropdown
    %button{:type=>'button', :id=>"per_page-toggle", :"data-toggle"=>"dropdown", :class=>"btn btn-default dropdown-toggle"}
      = link_to(t(:'blacklight.search.per_page.button_label', :count => current_per_page), '#')
      %i.glyphicon.glyphicon-list
    %ul.dropdown-menu{:role=>"menu",:"aria-labelledby"=>"per_page-toggle"}
      - blacklight_config.per_page.each do |count|
        %li= link_to(t(:'blacklight.search.per_page.label', :count => count).html_safe, url_for(params_for_search.merge(:per_page => count)))
